<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="lazyLoadingEnabled" value="false"/>
    </settings>

    <!-- type and alias -->
    <typeAliases>
        <typeAlias type="yzhao.mybatis.film.Film" alias="Film"/>
        <typeAlias type="cn.edu.yzhao.mybatis.model.Student" alias="Student"/>
        <typeAlias type="userpost.Post" alias="Post"/>
        <typeAlias type="userpost.User" alias="User"/>
    </typeAliases>


    <!-- sql connection info - jdbc-->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"></transactionManager>
            <dataSource type="POOLED">
                <property name="driver" value="org.mariadb.jdbc.Driver"/>
                <property name="url" value="jdbc:mariadb://127.0.0.1:3306/test"/>
                <property name="username" value="root"/>
                <property name="password" value="123456"/>
            </dataSource>
        </environment>
    </environments>


    <!--mapper file path-->
    <mappers>
        <mapper resource="FileMapper.xml"/>
        <mapper resource="mappers/StudentMapper.xml"/>
        <mapper resource="mappers/User.xml"/>
        <mapper resource="mappers/UserMapper.xml"/>
        <mapper resource="mappers/GroupMapper.xml"/>
        <mapper resource="mappers/UserGroupMapper.xml"/>
    </mappers>
</configuration>